# Configuração do Sistema de Detecção Facial
# Copie este arquivo para .env e configure as variáveis

# URL do webhook para receber alertas
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Configurações padrão de detecção
DEFAULT_PERSON_CONFIDENCE=0.6
DEFAULT_FACE_CONFIDENCE=0.7
DEFAULT_COOLDOWN=5
DEFAULT_FPS=5

# Configurações de performance
ENABLE_CACHE=true
ENABLE_CAPTURE=true
ENABLE_VISUAL_BOXES=true

# Configurações da câmera
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FACING=user

# Configurações de segurança
MAX_IMAGE_SIZE=1048576
ENABLE_CORS=true